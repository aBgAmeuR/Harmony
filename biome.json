{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"domains": {
			"next": "all",
			"react": "all",
			"project": "all"
		},
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe"
				}
			},
			"complexity": {
				"noForEach": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noUselessElse": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "warn",
				"noShadowRestrictedNames": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"noNoninteractiveTabindex": "off",
				"noLabelWithoutControl": "off"
			},
			"correctness": {
				"useImportExtensions": "off"
			}
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["**/*.scss", "**/*.css"],
							":NODE:",
							"react",
							[":PACKAGE:", "!@repo/**"],
							":BLANK_LINE:",
							"@repo/**",
							":BLANK_LINE:",
							":ALIAS:",
							":BLANK_LINE:",
							"**/*"
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
