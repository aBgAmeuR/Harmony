{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env"],
	"ui": "tui",
	"envMode": "loose",
	"tasks": {
		"build": {
			"dependsOn": ["^generate", "^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"dev": {
			"dependsOn": ["^generate"],
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"generate": {
			"cache": false
		},
		"studio": {},
		"format-and-lint": {},
		"format-and-lint:fix": {
			"cache": false
		}
	}
}
