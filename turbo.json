{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env"],
	"ui": "tui",
	"envMode": "loose",
	"tasks": {
		"build": {
			"dependsOn": ["^db:generate", "^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"dev": {
			"dependsOn": ["^db:generate"],
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"e2e": {
			"cache": false
		},
		"typecheck": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:studio": {},
		"db:push": {
			"cache": false
		},
		"db:pull": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		}
	}
}
