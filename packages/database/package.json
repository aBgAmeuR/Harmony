{
	"name": "@repo/database",
	"version": "2.0.0",
	"exports": {
		".": "./src/index.ts"
	},
	"scripts": {
		"dev": "tsup src/* --watch",
		"db:generate": "dotenv -e ../../.env -- drizzle-kit generate",
		"db:push": "dotenv -e ../../.env -- drizzle-kit push",
		"db:pull": "dotenv -e ../../.env -- drizzle-kit pull",
		"db:migrate": "dotenv -e ../../.env -- drizzle-kit migrate"
	},
	"dependencies": {
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.44.2",
		"pg": "^8.16.0",
		"postgres": "^3.4.7"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^22",
		"@types/pg": "^8.15.4",
		"drizzle-kit": "^0.31.1",
		"rimraf": "^6.0.1",
		"tsup": "^8.3.5",
		"tsx": "4.19.2",
		"typescript": "^5"
	}
}
