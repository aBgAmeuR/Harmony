{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": { 
    "plugins": [{ "name": "next" }],
    "moduleResolution": "bundler",
    "paths": {
      "@repo/*": ["../../packages/*/src"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
